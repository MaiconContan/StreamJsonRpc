{
  "$schema": "https://raw.githubusercontent.com/AArnott/Nerdbank.GitVersioning/master/src/NerdBank.GitVersioning/version.schema.json",
  "version": "0.21-alpha",
  "publicReleaseRefSpec": [
    "^refs/heads/master$"
  ],
  "cloudBuild": {
    "buildNumber": {
      "enabled": true,
      "includeCommitId": {
        "when": "always",
        "where": "fourthVersionComponent" // keep it short, so we don't have max_path problems
      }
    }
  }
}
